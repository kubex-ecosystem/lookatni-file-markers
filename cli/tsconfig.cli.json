{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/scripts/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "**/*.test.ts"
  ]
}
